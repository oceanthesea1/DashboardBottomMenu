<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1C1D22"
    android:orientation="vertical"
    tools:context=".calculator2">

    <TextView
        android:id="@+id/shapeName2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="text"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="50dp" />

    <ImageView
        android:id="@+id/imageParam2"
        android:layout_width="270dp"
        android:layout_height="270dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"/>

    <EditText
        android:id="@+id/inputParam2_1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:hint="Input Angka 1"
        android:textColorHint="#92929A"
        android:textSize="20dp"
        android:textAlignment="center"
        android:inputType="number"
        android:background="@drawable/edit_text" />

    <EditText
        android:id="@+id/inputParam2_2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:hint="Input Angka 2"
        android:textColorHint="#92929A"
        android:textSize="20dp"
        android:textAlignment="center"
        android:inputType="number"
        android:background="@drawable/edit_text" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Calculate"
        android:textSize="12dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:background="@drawable/button"
        android:layout_gravity="center" />

    <TextView
        android:id="@+id/resultView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Hasil"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:textSize="40dp"
        android:layout_gravity="center" />

</LinearLayout>